dnl Subst PACKAGE_DATA_DIR.
if test "x${prefix}" = "xNONE"; then
  AC_DEFINE_UNQUOTED(PACKAGE_DATA_DIR, "${packagedatadir}", [Package data directory])
dnl  PACKAGE_DATA_DIR="${packagedatadir}"
