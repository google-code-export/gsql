packagepluginsdir='$(libdir)/gsql/plugins'
packageenginesdir='$(libdir)/gsql/engines'
packagegladedir=share/${PACKAGE}/glade
packageuidir=share/${PACKAGE}/ui
packagetemplatedir=share/${PACKAGE}/template



